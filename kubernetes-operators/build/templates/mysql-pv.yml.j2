apiVersion: v1
kind: PersistentVolume
metadata:
  name: {{ name }}-pv
  labels:
    pv-usage: {{ name }}
spec:
  persistentVolumeReclaimPolicy: Retain
  storageClassName: local-storage
  volumeMode: Filesystem
  accessModes:
    - ReadWriteOnce
  capacity:
    storage: {{ storage_size }}
  hostPath:
    path: /Users/User/Projects/HunteX_platform/kubernetes-operators/build/data/{{ name }}-pv/