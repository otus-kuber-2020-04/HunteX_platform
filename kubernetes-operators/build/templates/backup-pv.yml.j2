apiVersion: v1
kind: PersistentVolume
metadata:
  name:  "backup-{{ name }}-pv"
  labels:
    pv-usage: "backup-{{ name }}"
spec:
  persistentVolumeReclaimPolicy: Retain
  storageClassName: local-storage
  volumeMode: Filesystem
  accessModes:
    - ReadWriteOnce
  capacity:
    storage: 1Gi
  hostPath:
    path: /Users/User/Projects/HunteX_platform/kubernetes-operators/build/data/pv-backup/
